FROM debian:rc-buggy-20250317

WORKDIR /app

COPY app.py .
COPY templates templates/
COPY static static/

RUN apt-get update -y && apt-get install python3-flask -y && apt-get install python3-redis -y && apt-get install python3-prometheus-client -y

EXPOSE 5000

CMD ["flask", "run", "--host=0.0.0.0"]




